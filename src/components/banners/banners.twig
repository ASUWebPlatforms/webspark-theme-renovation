<div class="{{ background_color }}" role="banner">
  <div class="banner container" role="banner">
    <div class="banner-icon">
      <span title="Banner">
        {{ icon }}
      </span>
    </div>
    <div class="banner-content">
      {{ heading }}
      <div class="mt-3">{{ banner_text }}</div>
    </div>
    <div class="banner-buttons">
      {{ ctas }}
    </div>
    <div id="banner-close" class="banner-close">
      <button type="button" class="btn btn-circle btn-circle-alt-black close" aria-label="Close"><i class="fas fa-times"></i></button>
    </div>
  </div>
</div>


