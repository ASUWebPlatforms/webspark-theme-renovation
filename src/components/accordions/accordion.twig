{% set is_icon = content.field_icon|render %}

{% set link_id = heading|replace({' ': '-'}) %}
{# Card #}
<div class="card card-foldable mt-3{% if color != 'default' %} {{ color }}{% endif %}">

  {# Card Header #}
  <div class="card-header{% if is_icon  %} card-header-icon{% endif %}">
    <h4>
      <a id="card-{{ link_id|lower }}" class="collapsed" href="#card-body-{{ link_id|lower }}" data-toggle="collapse"
         data-target="#card-body-{{ link_id|lower }}" role="button" aria-expanded="false"
         aria-controls="card-body-{{ link_id|lower }}">

        {% if is_icon  %}
        <span class="card-icon">
          <i class="{{ content.field_icon[0]['#icons'][0]['#style'] }} {{ content.field_icon[0]['#icons'][0]['#name'] }}  mr-2" role="img" aria-label="..."></i>
          {{ heading }}
         </span>
        {% else %}
          {{ heading }}
        {% endif %}

        <span class="fas fa-chevron-up"></span>
      </a>
    </h4>
  </div>

  {# Card Body #}
  <div id="card-body-{{ link_id|lower }}" class="collapse card-body" aria-labelledby="{{ heading }}"
       data-parent="#accordion-{{ unique_id }}">
    {# Body value #}
    {{ body_text|raw }}
  </div>
  {# End body #}

</div>
{# End card #}

