<div class="uds-img{% if drop_shadow[0]['#markup'] == '1' %} uds-img-drop-shadow{% endif %}">
  <figure class="figure uds-figure">
    {{ media }}
    {% if caption|render is not empty %}
      <figcaption class="figure-caption uds-figure-caption"><span class="uds-caption-text">
          {{ caption }}
        </span>
      </figcaption>
    {% endif %}
  </figure>
</div>
