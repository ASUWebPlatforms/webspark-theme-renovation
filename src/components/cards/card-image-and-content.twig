<div class="p-0 p-md-5">
  <div class="uds-card-image-and-content">
    <div class="uds-card-image-and-content-image-container" style="background-image: linear-gradient(180deg, #19191900 0%, #191919c9 100%), url({{ image_background }});">
      <div class="uds-card-image-and-content-image-container-headline {{ heading_color }}">
        {{ heading }}
      </div>
    </div>

    <div class="uds-card-image-and-content-content-container">
      <div class="content {{ text_color }}">
        {{ content }}
      </div>
      {{ card }}
    </div>
  </div>
</div>
