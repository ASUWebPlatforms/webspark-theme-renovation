{% if show_logo_social_media %}
  <div class="wrapper" id="wrapper-endorsed-footer">
    <div class="container" id="endorsed-footer">
      <div class="row">
        <div class="col-md" id="endorsed-logo">
          {% if unit_custom_logo %}
            {{ unit_custom_logo }}
          {% else %}
            <img src="{{ src_unit_logo }}" alt="ASU University Technology Office Arizona State University."/>
          {% endif %}
        </div>
        <div class="col-md" id="social-media">
          <nav class="nav" aria-label="Social Media">
            {% if facebook_url %}
              <a class="nav-link" href="{{ facebook_url }}"><span title="Facebook Social Media Icon" class="fab fa-facebook-square"></span></a>
            {% endif %}
            {% if twitter_url %}
              <a class="nav-link" href="{{ twitter_url }}"><span title="Twitter Social Media Icon" class="fab fa-twitter-square"></span></a>
            {% endif %}
            {% if linkedin_url %}
              <a class="nav-link" href="{{ linkedin_url  }}"><span title="LinkedIn Social Media Icon" class="fab fa-linkedin"></span></a>
            {% endif %}
            {% if instagram_ulr %}
              <a class="nav-link" href="{{ instagram_ulr }}"><span title="Instagram Social Media Icon" class="fab fa-instagram-square"></span></a>
            {% endif %}
            {% if youtube_url %}
              <a class="nav-link" href="{{ youtube_url }}"><span title="YouTube Social Media Icon" class="fab fa-youtube-square"></span></a>
            {% endif %}
          </nav>
        </div>

      </div>
    </div>
  </div>
{% endif %}

{% if show_columns %}
  <div class="wrapper" id="wrapper-footer-columns">
    <div class="container" id="footer-columns">
      <div class="row">
        <div class="col-xl-3" id="info-column">
          <h5>{{ unit_name }}</h5>
          {% if link_url and link_title %}
            <p class="contact-link"><a href="{{ link_url }}">{{ link_title }}</a></p>
          {% endif %}
          {% if cta_url and cta_title %}
            <p class="contribute-button"><a href="{{ cta_url }}" class="btn btn-small btn-gold">{{ cta_title }}</a></p>
          {% endif %}
        </div>
        {% for column in columns_data %}
        <div class="col-xl flex-footer">
          <div class="card card-foldable desktop-disable-xl">
            <div class="card-header">
              <h5>
                <a id="footlink-header-two" class="collapsed" data-toggle="collapse" href="#footlink-two" role="button" aria-expanded="false" aria-controls="footlink-two">
                  {{ column.title }}
                  <span class="fas fa-chevron-up"></span>
                </a>
              </h5>
            </div>
            <div id="footlink-two" class="collapse card-body" aria-labelledby="footlink-header-two">
              {{ column.menu_items }}
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}

