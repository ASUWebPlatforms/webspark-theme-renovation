{#
/**
 * @file
 * Template for a banner block.
 */
#}
{% set classes = [
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
] %}

<div{{ attributes.addClass(classes) }}>
  {{ title_suffix }}
  {% include '@renovation/banners/banner.twig' with {
    background_color: content.field_background_color.0['#markup'],
    icon: content.field_icon,
    heading: content.field_heading,
    banner_text: content.field_banner_text,
    cta: content.field_cta
  } %}
</div>
