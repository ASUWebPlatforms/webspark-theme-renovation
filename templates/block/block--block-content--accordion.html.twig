{#
/**
 * @file
 * Template for a banner block.
 */
#}
{% set classes = [
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
] %}

<div{{ attributes.addClass(classes) }}>
{{ title_prefix }}
  {% if label %}
    {% block label %}
      <h2{{ title_attributes }}>{{ label }}</h2>
    {% endblock %}
  {% endif %}
  {{ title_suffix }}
  <div class="container">
    <div class="accordion mb-3 mt-3">
      <div class="card mb-0">
        {# Hide color select field as not imp-lemented yet.#}
        {{ content|without('field_color') }}
      </div>
    </div>
  </div>
</div>
