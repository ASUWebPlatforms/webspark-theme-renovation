{#
/**
 * @file
 * Template for a accordion block.
 */
#}
{% set classes = [
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
] %}

{% set unique_label = configuration['label'] %}
{% set unique_id = unique_label|replace({' ': '-'}) %}

<div{{ attributes.addClass(classes) }}>
  {{ title_suffix }}
  <div class="accordion" id="{{ unique_id|lower }}">
    {# Hide color select field as not imp-lemented yet.#}
    {{ content|without('field_color', 'field_anchor') }}
  </div>
</div>
