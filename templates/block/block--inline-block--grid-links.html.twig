{#
/**
 * @file
 * Template for a block.
 */
#}
{% set classes = [
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
] %}

<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}
  {{ content.field_tooltip }}
  {% block content %}
    {% include '@renovation/grid-links/grid-links.twig' with {
      links: content.field_links,
      style: content.field_grid_links_style.0,
    } %}
  {% endblock %}
</div>
