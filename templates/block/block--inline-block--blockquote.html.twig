{#
/**
 * @file
 * Template for a block.
 */
#}
{% set classes = [
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
] %}

{% set bg_color = content.field_blockquote_bg_color[0]['#markup'] %}


<div{{ attributes.addClass(classes) }}>
  {{ title_suffix }}
  {{ content.field_tooltip }}
  {% if content.field_media|render %}
    {% include '@renovation/blockquote/blockquote-image.twig' with {
      reversed: content.field_reverse_image[0]['#markup'],
      accent_color: content.field_accent_color,
      background_color: bg_color,
      citation_author: content.field_blockquote_citation_author,
      citation_description: content.field_blockquote_citation_title,
      media: content.field_media,
      body_text: content.field_formatted_text[0],
    } %}
  {% endif %}
  {% if not content.field_media|render %}
    {% include '@renovation/blockquote/blockquote.twig' with {
      accent_color: content.field_accent_color,
      background_color: bg_color,
      citation_author: content.field_blockquote_citation_author,
      citation_description: content.field_blockquote_citation_title,
      body_text: content.field_formatted_text[0],
    } %}
  {% endif %}
</div>
