{#
/**
 * @file
 * Template for event block.
 */
#}
{% set classes = [
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
] %}
{{ attach_library('asu_news/event-components-library') }}
{{ attach_library('asu_react_integration/reactjs') }}

<div{{ attributes.addClass(classes) }}>
  {{ title_suffix }}
  {{ content.field_anchor_menu_settings }}
  <div class="clas-news-react-base"
    data-header-title="{{ content.field_heading.0 }}"
    data-cta-link="{{ content.field_news_link[0]['#url'] }}"
    data-cta-text="{{ content.field_news_link[0]['#title']  }}"
    data-view="{{ content.field_display.0 }}"
    data-feed="/asu-news-feed/"
    data-feed-section="{{ content.field_news_feed_filter.0  }}"
    data-items="{{ content.field_news_items_to_display.0 }}">
    ASU News
  </div>
</div>
