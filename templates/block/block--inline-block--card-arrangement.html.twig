{#
/**
 * @file
 * Template for a block.
 */
#}
{% set classes = [
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
] %}
<div{{ attributes.addClass(classes) }}>
  {{ title_suffix }}
  {% include '@renovation/cards/cards.twig' with {
    html_tag: 'div',
    content: content,
    card_view_mode: content.field_cards['#view_mode']
  } %}
</div>
